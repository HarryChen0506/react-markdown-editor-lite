  "devDependencies": {
    "@nowa/solution-react-component": "^0.2.1",
    "@types/chai": "^4.2.7",
    "@types/markdown-it": "^0.0.8",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.5.1",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "@types/uuid": "^3.4.6",
    "chai": "^4.2.0",
    "dts-bundle": "^0.7.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
