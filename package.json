    "tslint-react": "^4.2.0",
    "typescript": "^3.5.2",
    "url-loader": "^2.1.0"
  },
  "dependencies": {
    "eventemitter3": "^4.0.0",
    "uuid": "^3.4.0"
  },
  "peerDependencies": {
    "react": "^16"
  },
  "lint-staged": {
    "./src/**/*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
