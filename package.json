    "lint-staged": "^10.0.2",
    "markdown-it": "^8.4.2",
    "mocha": "^5.2.0",
    "mochawesome": "^4.1.0",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-markdown": "^4.3.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
